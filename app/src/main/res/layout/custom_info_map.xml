<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/marker_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/loc_stud"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:background="@drawable/rectangle_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/stud_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="8dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/imageView9"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_stud1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/img_stud1"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="1dp"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="@id/marker_background"
        app:layout_constraintEnd_toEndOf="@id/marker_background"
        app:layout_constraintTop_toTopOf="@id/marker_background"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="60dp">

        <ImageView
            android:id="@+id/marker_image1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/map_corner"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
